generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Author {
  id     Int     @id @default(autoincrement())
  name   String
  quotes Quote[]
}

model Quote {
  id   Int    @id @default(autoincrement())
  text String

  Author   Author? @relation(fields: [authorId], references: [id])
  authorId Int?

  @@index([authorId])
}
